# Default timezone for the system
timezone    = "Europe/Rome"
# Default locale for the system
locale      = "it_IT.UTF-8"
# Default keyboard layout to use
keymap      = "us"
# Static IPv4 or IPv6 address + prefix length
net_address = "192.168.0.1/24"
# Router / Gateway address
net_gateway = "192.168.0.254"
# Custom machine hostname
hostname    = "alpi"
# Default user (`alarm` is Arch Linux ARM default)
username    = "alarm"
# Local path to public key. Used to SSH access the RPi
auth_sshkey = "build/id_rsa.pub"
